{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "rootDir": "./",
    "module": "NodeNext",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"]
    },
    "outDir": "./build",
    "moduleResolution": "nodenext",
    "esModuleInterop": true, // CommonJS와 ES 모듈 간의 상호운용성을 위한 설정
    "forceConsistentCasingInFileNames": true, // 대소문자 구분
    "allowJs": true, // 기존 JS 파일도 프로젝트에 포함. 점진적 고도화(js->ts)
    "checkJs": true, // JS 파일까지 타입 검사할지 여부
    "noEmit": true, // 타입 체크만 하고 실제 파일은 생성하지 않음 (Babel, Vite 등)
    "noEmitOnError": true, // 컴파일 에러 발생 시 js 컴파일 방지
    "sourceMap": true, // .js.map 파일 생성, ts로 작업 시 디버깅에 유용
    "declaration": true, // ts -> js 컴파일 중 타입을 .d.ts라는 파일로 생성해줌
    "removeComments": true, // ts 파일에 적힌 주석 모두 제거된 js 파일 생성
    "strict": true, // ts의 타입체킹을 활성화 여부

    "noUnusedLocals": true, // 사용하지 않는 지역변수가 있다면 에러
    "noUnusedParameters": true, // 사용하지 않는 파라미터가 있다면 에러
    "noImplicitReturns": true, // 함수에 return이 없는 경우 에러
    "skipLibCheck": true // node_modules 타입 검사는 건너뜀 (속도 ↑)
  },
  "include": ["src/advanced/**/*"],
  "exclude": ["node_modules", "src/basic", "src/main.original.js"]
}
