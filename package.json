{
  "name": "hanghae99-chap4",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "dev:basic": "vite --config src/basic/vite.config.js",
    "build:basic": "vite build --config src/basic/vite.config.js",
    "copy:basic": "rmdir /S /Q docs\\basic && mkdir docs\\basic && xcopy /E /I /Y src\\basic\\dist\\* docs\\basic\\",
    "deploy:basic": "pnpm build:basic && pnpm copy:basic && git add docs/basic && git commit -m \"deploy basic\" && git push",
    "dev:advanced": "vite --config ./advanced/vite.config.js",
    "build:advanced": "vite build --config ./advanced/vite.config.js",
    "copy:advanced": "rm -rf docs/advanced && cp -r advanced/dist docs/advanced",
    "deploy:advanced": "pnpm build:advanced && pnpm copy:advanced && git add docs/advanced && git commit -m 'deploy advanced' && git push",
    "preview": "vite preview",
    "start:basic": "vite serve --open ./index.basic.html",
    "start:advanced": "vite serve --open ./index.advanced.html",
    "test": "vitest",
    "test:basic": "vitest basic.test.js",
    "test:advanced": "vitest advanced.test.js",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/ui": "^3.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "dependencies": {
    "assert": "^2.1.0"
  }
}
