{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "no-var": "off",
    "vars-on-top": "off",
    "prefer-const": "warn",
    "prefer-template": "warn",
    "no-unused-vars": "warn",
    "func-names": "off",
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "no-alert": "off",
    "no-param-reassign": "off",
    "no-plusplus": "off",
    "no-shadow": "warn",
    "max-len": [
      "error",
      {
        "code": 120
      }
    ]
  }
